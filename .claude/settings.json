{
  "permissions": {
    "additionalDirectories": ["../ghidra"],
    "allow": [
      "Search(path:../ghidra)",
      "Read(../ghidra/**)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/setup-environment.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Edit", "MultiEdit", "Write"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "gradle compileJava"
          }
        ]
      }
    ]
  }
}